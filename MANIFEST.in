# MANIFEST.in - Explicit file inclusion for packaging

# Include all configuration files
include *.md
include *.txt
include *.yml
include *.yaml
include LICENSE
include Makefile
include Dockerfile*
include docker-compose*
include env.example

# Include package data
recursive-include app *.py
recursive-include api *.py
recursive-include scripts *.py
recursive-include tests *.py

# Include schema files
recursive-include schemas *.json
recursive-include schemas *.yaml
recursive-include custom_schemas *.json

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst

# Include frontend build files (for production packages)
recursive-include frontend/dist *
include frontend/package.json
include frontend/package-lock.json

# Exclude development files
exclude .gitignore
exclude .dockerignore
exclude .dvcignore
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * *.swp
recursive-exclude * *.swo
recursive-exclude frontend/node_modules *
recursive-exclude frontend/src *
recursive-exclude .git *
recursive-exclude .pytest_cache *
recursive-exclude .mypy_cache *
