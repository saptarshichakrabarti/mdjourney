# MANIFEST.in - Explicit file inclusion for packaging
# Adapted for refactored gateway-based architecture

# Include all configuration files
include *.md
include *.txt
include *.yml
include *.yaml
include LICENSE
include Makefile
include Dockerfile*
include docker-compose*
include env.example
include manage.py

# Include package data
recursive-include mdjourney-backend/app *.py
recursive-include mdjourney-backend/routers *.py
recursive-include mdjourney-backend/models *.py
recursive-include mdjourney-backend/scripts *.py
recursive-include mdjourney-backend/tests *.py

# Include schema files
recursive-include mdjourney-backend/packaged_schemas *.json
recursive-include mdjourney-backend/packaged_schemas *.yaml
recursive-include mdjourney-backend/packaged_schemas/contextual *.json

# Include documentation
recursive-include documentation *.md
recursive-include documentation *.rst

# Include frontend build files (for production packages)
recursive-include mdjourney-webapp/dist *
include mdjourney-webapp/package.json
include mdjourney-webapp/package-lock.json

# Include gateway files
recursive-include mdjourney-gateway *.py

# Exclude development files
exclude .gitignore
exclude .dockerignore
exclude .dvcignore
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * *.swp
recursive-exclude * *.swo
recursive-exclude mdjourney-webapp/node_modules *
recursive-exclude mdjourney-webapp/src *
recursive-exclude .git *
recursive-exclude .pytest_cache *
recursive-exclude .mypy_cache *
