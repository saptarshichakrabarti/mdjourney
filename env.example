# FAIR Metadata Automation - Environment Variables
# Copy this file to .env and modify as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
MDJOURNEY_ENV=development

# Application Settings
MONITOR_PATH=./data
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# API SETTINGS
# =============================================================================

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TIMEOUT=30
API_MAX_REQUEST_SIZE=10MB

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Authentication
MDJOURNEY_API_KEY=your-secure-api-key-here
ENABLE_AUTHENTICATION=false
TOKEN_EXPIRY_HOURS=24

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Input Validation
MAX_ID_LENGTH=100
MAX_FILE_SIZE=100MB
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.tiff,.tif,.pdf,.txt,.csv,.json,.xml

# =============================================================================
# FILE PROCESSING SETTINGS
# =============================================================================

# File Processing Configuration
CHECKSUM_ALGORITHM=sha256
CHUNK_SIZE=4096
SUPPORTED_FORMATS=jpg,jpeg,png,tiff,tif,pdf,txt,csv,json,xml

# =============================================================================
# FRONTEND SETTINGS
# =============================================================================

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=10000
FRONTEND_PORT=8080

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database Configuration
DATABASE_URL=sqlite:///./data/metadata.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# REDIS SETTINGS
# =============================================================================

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# VERSION CONTROL SETTINGS
# =============================================================================

# Git Configuration
GIT_ENABLED=true
GIT_COMMIT_MESSAGE_PREFIX=FAIR Metadata:
GIT_AUTHOR_NAME=FAIR Metadata System
GIT_AUTHOR_EMAIL=metadata@example.com

# DVC Configuration
DVC_ENABLED=true
DVC_REMOTE=local
DVC_CACHE_DIR=./.dvc/cache

# =============================================================================
# SCHEMA SETTINGS
# =============================================================================

# Schema Configuration
SCHEMA_BASE_PATH=packaged_schemas
SCHEMA_STRICT_VALIDATION=true
SCHEMA_ALLOW_MISSING=false
SCHEMA_CUSTOM_PATH=

# =============================================================================
# MONITOR SETTINGS
# =============================================================================

# Monitor Configuration
MONITOR_RECURSIVE=true
MONITOR_IGNORE_PATTERNS=.git,.dvc,__pycache__,.DS_Store,*.tmp,*.log
MONITOR_SCAN_INTERVAL=30

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=

# =============================================================================
# NOTIFICATION SETTINGS (for future use)
# =============================================================================

# Notification Configuration
SLACK_WEBHOOK_URL=
NOTIFICATION_CHANNEL=console
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=